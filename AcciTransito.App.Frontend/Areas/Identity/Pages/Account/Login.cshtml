@page
@model LoginModel

@{
    ViewData["Title"] = "Autenticaci칩n";
}

<style>
    body{
        background-color: #90c390;
    }

    .round1{
        background-color: white;
        margin:0 auto;
        margin-top:5%;
        padding:0;
        text-align:center;
        border: 5px solid green;
        border-radius: 12px;
        padding: 5px;
    }
</style>

<h1>@ViewData["Title"]</h1>
<div class="row" >
    <div class="col-sm-8 round1">
        <section>
            <form id="account" method="post">
                <h4> Inicio de Sesi칩n</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="width:50%; margin:0 auto; border-color:green" >
                    <label asp-for="Input.Email"> Correo Electronico</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:50%; margin:0 auto">
                    <label asp-for="Input.Password">Contrase침a</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"> Ingresar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contrase침a?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar nuevo usuario</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-sm-8" style="margin:0 auto; padding:0">
        <section>
            <h4>Usar otro servicio para ingresar.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
